<div ng-app="rumbleApp">
  <div ng-controller="MainController" ng-init="graphScores()">
   <!-- ng-init="graphScores()" -->
    <div class="container">

      <div class="header">
        <li class="categories" name='selectCategory' ng-repeat="category in categories" ng-click='getScales(category)'>
            {{category.name}}
        </li>
      </div>

      <div class="main-div">
        <div class="graph-container">
          <div class="label-xplus">{{x.positive}}</div>
          <div class="label-xneg">{{x.negative}}</div>
          <div class="label-yplus">{{y.positive}}</div>
          <div id="graph"></div>
          <div class="label-yneg">{{y.negative}}</div>
        </div>


        <div class="menu">
          <div class="scale1">
            <p>Scale 1</p>
            <select name='scale1' size='5' MULTIPLE ng-change='' ng-model='x'>
              <option ng-repeat='scale in scales' ng-value='scale'>
                {{scale.name}}
              </option>
            </select>
          </div>
          <div class="scale2">
            <p>Scale 2</p>
            <select name='scale2' size='5' MULTIPLE>
              <option ng-repeat='scale in scales' ng-value='scale'>
                {{scale.name}}
              </option>
            </select>
          </div>

          <div class="random" ng-click="graphScores()">
            RANDOMIZE
          </div>
          <div class="entities">
            <li ng-repeat="entity in entities">
              {{entity.name}}
            </li>
          </div>
        </div>
        <div class="clear"></div>
      </div> <!-- main -->

    </div>
    <div class="entity-score">
      <li ng-repeat="score in entityScore">
        ({{score.x.score}}, {{score.y.score}}), out of {{score.x.total}}
      </li>
    </div>
    <div class="entity-score">
      <li ng-repeat="score in entityScoreR">
        ({{score.x.score}}, {{score.y.score}}), out of {{score.x.total}}
      </li>
    </div>
  </div> <!-- mainController -->
</div>

