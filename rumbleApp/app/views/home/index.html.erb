<div ng-app="rumbleApp">
  <div ng-controller="MainController" ng-init="graphScores()">
   <!-- ng-init="graphScores()" -->

    <div class="container">

      <div class="header">
        <span class="cat-header">CATEGORIES</span>
        <li class="categories" name='selectCategory' ng-repeat="category in categories" ng-click='getScales(category)'>
            {{category.name | uppercase}}
        </li>
      </div>

      <div class="main-div">

        <div class="graph-container">
          <div class="label-xplus">{{x.positive}}</div>
          <div class="label-xneg">{{x.negative}}</div>
          <div class="label-yplus">{{y.positive}}</div>
          <div id="graph"></div>
          <div class="label-yneg">{{y.negative}}</div>
          <div class="label-yplus">ENTERTAINING</div>
          <div class="label-x scales active">SCALE X LABEL</div>
          <div class="label-xneg">USELESS</div>
          <div class="label-xplus">USEFUL</div>
          <div id="graph"></div>
          <div class="label-yneg">BORING</div>
          <div class="label-y scales active">SCALE Y LABEL</div>
        </div>


        <div class="menu">
          <div class="scale1">
            <p>Scale 1</p>
            <select name='scale1' size='5' MULTIPLE ng-change='' ng-model='x'>
              <option ng-repeat='scale in scales' ng-value='scale'>
          <div class="random" ng-click="graphScores()">
            RANDOMIZE
          </div>
          
          <span class="scale-header">SCALE 1</span>
            <li class="scales" ng-repeat="scale in scales" ng-value="scale.id">
                {{scale.name | uppercase}}
            </li>
            <li class="scales active">SCALE SELECTED</li>
          <br><br>
          <span class="scale-header">SCALE 2</span>
            <li class="scales" ng-repeat="scale in scales" ng-value="scale.id">
                {{scale.name | uppercase}}
            </li>
            <li class="scales active">SCALE SELECTED</li>
