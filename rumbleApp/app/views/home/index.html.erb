            <p>SCALE 2</p>
            <select name='scale2' size='5' MULTIPLE>
              <option ng-repeat='scale in scales' ng-value='scale'>
                {{scale.name}}
              </option>
            </select>
          </div> -->


          <div class="random" ng-click="graphScores()">
            RANDOMIZE
          </div>
          <div class="entities">
            <li ng-repeat="entity in entities">
              {{entity.name}}
            </li>
          </div>
            <div class="entities">
              <span class="scale-header">COMPANIES</span>
              <li class="scales active">SHOW ALL</li>
              <li class="scales" ng-repeat="entity in entities">
                {{entity.name }}
              </li>
              <li class="scales">CLEAR ALL</li>
            </div>
        </div>
        <div class="clear"></div>
      </div> <!-- main -->

    </div>
